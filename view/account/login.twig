{% extends "index.twig" %}

{% block script %}
	<script>
	$(function(){
		var message = [];
		{% for property, message in errors %}
		$('[name={{ property }}]').after('<span class="error">{{ message }}</span>');
		{% endfor %}

	});
	</script>
{% endblock %}

{% block content %}
	<div class="frm_login">
		<form action="/account/login" method="post">
		<div>
			<input type="text" placeholder="이메일을 입력하세요" name="email" value="{{ data.email }}"/>
		</div>
		<div>
			<input type="password" placeholder="비밀번호를 입력하세요" name="password"/>
		</div>
		<div>
			<a href="/account/join/form"><span>Create Account</span></a>
		<button type="submit">Login</button>
		</div>
		</form>
	</div>
{% endblock %}