{% extends "index.twig" %}

{% block script %}
	<script>
		$(function(){
			var message = [];
			{% for property, message in errors %}
			$('[name="{{ property }}"]').after('<span class="error">{{ message }}</span>');
			{% endfor %}
		});
	</script>
{% endblock %}

{% block content %}
	<div class="frm_join">
		<form action="/account/join" method="post">
			<div>
				<input type="text" placeholder="이메일을 입력하세요" name="email" value="{{ data.email }}"/>
			</div>
			<div>
				<input type="text" placeholder="이름을 입력하세요" name="name" value="{{ data.name }}"/>
			</div>
			<div>
				<input type="password" placeholder="비밀번호를 입력하세요" name="password"/>
			</div>
			<div>
				<input type="password" placeholder="비밀번호를 다시 입력하세요" name="repassword"/>
			</div>
			<div>
				<button type="submit">Join</button>
			</div>
		</form>
	</div>
{% endblock %}